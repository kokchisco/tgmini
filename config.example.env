# ========================================
# TGTask Bot Configuration
# ========================================

# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
WEBAPP_URL=https://your-domain.com/webapp

# Database Configuration
DATABASE_URL=sqlite:./database/tgtask.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/tgtask

# Server Configuration
PORT=3000
WEBAPP_PORT=3001
NODE_ENV=development

# Security
JWT_SECRET=your_jwt_secret_here_make_it_long_and_random
SESSION_SECRET=your_session_secret_here_make_it_long_and_random

# Admin Configuration
ADMIN_USER_ID=your_telegram_user_id_here

# ========================================
# Task Configuration
# ========================================

# Points for completing tasks
POINTS_PER_CHANNEL_JOIN=10
POINTS_PER_GROUP_JOIN=15
POINTS_PER_FRIEND_INVITE=25
DAILY_TASK_LIMIT=5

# ========================================
# Withdrawal Configuration
# ========================================

# Minimum and maximum withdrawal amounts (in Naira)
MIN_WITHDRAWAL_AMOUNT=1000
MAX_WITHDRAWAL_AMOUNT=50000

# Withdrawal fee percentage (e.g., 5 = 5%)
WITHDRAWAL_FEE_PERCENTAGE=5

# Points required to edit bank details
BANK_EDIT_FEE=3000

# ========================================
# Daily Claims Configuration
# ========================================

# Daily claim limits
DAILY_CLAIMS_LIMIT=5

# Random claim amount range (in points)
MIN_CLAIM_AMOUNT=50
MAX_CLAIM_AMOUNT=500

# Bonus claims for inviting friends
BONUS_CLAIMS_PER_FRIENDS=2
FRIENDS_REQUIRED_FOR_BONUS=10

# ========================================
# Support Configuration
# ========================================

# Support username for users to contact
SUPPORT_USERNAME=@your_support_username

# ========================================
# Optional: Advanced Configuration
# ========================================

# Rate limiting (requests per minute)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session timeout (in milliseconds)
SESSION_TIMEOUT=86400000

# Logging level (debug, info, warn, error)
LOG_LEVEL=info
